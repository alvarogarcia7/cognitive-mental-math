#!/bin/bash

# Pre-push hook: Run pre-push checks via Makefile with parallel execution
echo "Running pre-push hook..."

# Run make pre-push with -j 2 for parallel execution
if ! make -j 2 pre-push; then
    echo ""
    echo "‚ùå Pre-push checks failed! Push aborted."
    echo "Please fix the issues before pushing."
    exit 1
fi

exit 0
